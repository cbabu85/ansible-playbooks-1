[program:{{ item }}]
command={{ goapp_bin_path }}/{{ item }} -config={% if item  == "nsq_service" %}{{ goapp_cfg_path }}/nsq/{{GO_ENV}}.config{% else %}{{ goapp_cfg_path }}/{{GO_ENV}}.json{% endif %}

environment=GOPATH="{{go_env.GOPATH}}",EXCHANGE_HOME="{{goapp_src_path}}",PATH="$PATH:{{goapp_bin_path}}:/usr/local/go/bin:/usr/local/sbin"

autostart=true
autorestart=true
startretries=10
startsecs=5
directory={{ goapp_bin_path }}


user={{ system_default_user }}
redirect_stderr=true
stdout_logfile={{goapp_log_path}}/{{ item }}.log
stdout_logfile_maxbytes=50MB
stdout_logfile_backups=10
